#!/bin/bash

script=$(dirname $0)/cifar10_fulltrain.py
log_folder=$(dirname $0)/logfolder/
jb=./code/job_manager.py
mkdir $log_folder

python $jb -reset

for NUMOBJ in 1 5 25 50 100 250 500
do
	for SEED in 1 2 3
	do
		# python $jb -command "python $script --num_imgs $NUMOBJ --seed $SEED" -gpus 1 2 3 -max 2 &
		python $jb -command "python $script -transform trsbc --exp_max_obj --num_imgs $NUMOBJ --seed $SEED" -gpus 1 2 3 -max 2 &
		# python $jb -command "python $script -transform t --num_imgs $NUMOBJ --seed $SEED" -gpus 1 2 3 -max 2 &
		# python $jb -command "python $script -transform r --num_imgs $NUMOBJ --seed $SEED" -gpus 1 2 3 -max 2 &
		# python $jb -command "python $script -transform s --num_imgs $NUMOBJ --seed $SEED" -gpus 1 2 3 -max 2 &
		# python $jb -command "python $script -transform b --num_imgs $NUMOBJ --seed $SEED" -gpus 1 2 3 -max 2 &
		# python $jb -command "python $script -transform c --num_imgs $NUMOBJ --seed $SEED" -gpus 1 2 3 -max 2 &
	done
done


sleep 5 && tail -F /dev/null